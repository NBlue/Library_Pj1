<div class="modal">
    <div class="login_register">
        {{!-- <p class="modal-title">welcome to NBLUE Library</p> --}}
        <div class="modal-wrap">
            {{!-- <img class="acc-logo" src="/img/logo.png" alt="" /> --}}
            <!-- REGISTER -->
            <div class="register">
                <form action="./register" method="POST">
                    <h1 class="acc-title">Đăng kí</h1>
                    <div class="form-group">
                        <label for="fullname" class="form-label">Tên đầy đủ</label>
                        <input
                            id="fullname"
                            name="fullname"
                            type="text"
                            value="{{body.fullname}}"
                            placeholder="VD: Nguyễn Phương Nam"
                            class="form-control"
                        />
                        <span class="form-message">{{errMess.fullname}}</span>
                    </div>
                    <div class="form-group">
                        <label for="email" class="form-label">Nhập email</label>
                        <input
                            id="email"
                            name="email"
                            value="{{body.email}}"
                            type="text"
                            placeholder="VD: abc@gmail.com"
                            class="form-control"
                        />
                        <span class="form-message">{{errMess.email}}</span>
                    </div>
                    <div class="form-group">
                        <label for="address" class="form-label">Địa chỉ</label>
                        <input
                            id="address"
                            name="address"
                            value="{{body.address}}"
                            type="text"
                            placeholder="Nhập địa chỉ"
                            class="form-control"
                        />
                        <span class="form-message">{{errMess.address}}</span>
                    </div>
                    <div class="form-group">
                        <label for="username" class="form-label">Tên tài khoản</label>
                        <input
                            id="username"
                            name="username"
                            value="{{body.username}}"
                            type="text"
                            placeholder="VD: User123"
                            class="form-control"
                        />
                        <span class="form-message">{{errMess.username}}</span>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input
                            id="password"
                            name="password"
                            value="{{body.password}}"
                            type="password"
                            placeholder="Nhập mật khẩu"
                            class="form-control"
                        />
                        <span class="form-message">{{errMess.password}}</span>
                    </div>
                    <div class="form-group">
                        <label for="password_confirmation" class="form-label">Xác
                            nhận mật khẩu</label>
                        <input
                            id="password_confirmation"
                            name="password_confirmation"
                            value="{{body.password_confirmation}}"
                            type="password"
                            placeholder="Nhập lại mật khẩu"
                            class="form-control"
                        />
                        <span class="form-message">{{errMess.password_confirmation}}</span>
                    </div>
                    <button class="form-submit" type="submit">Đăng ký</button>
                    <section class="form-check">
                        <p class="form-check-text">Bạn đã có tài khoản?</p>
                        <a href="/login" class="form-check-btn login-btn">Đăng nhập</a>
                    </section>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const formMess = document.querySelectorAll(".form-message");
    const formGroup = document.querySelectorAll(".form-group")

    formMess.forEach((form, index) => {
        if(form.innerText.length > 0){
            formGroup[index].classList.add("invalid");
        } else if(form.innerText.length === 0 ){
            formGroup[index].classList.remove("invalid");
        }
    })
</script>